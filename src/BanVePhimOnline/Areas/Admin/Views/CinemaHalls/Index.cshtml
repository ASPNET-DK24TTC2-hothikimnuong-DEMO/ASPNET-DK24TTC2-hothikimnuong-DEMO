@model IEnumerable<BanVePhimOnline.Models.CinemaHall>

@{
    ViewData["Title"] = "Quản Lý Phòng Chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản Lý Phòng Chiếu</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên Phòng</th>
            <th>Rạp</th>
            <th>Số Ghế</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cinema.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeats)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi Tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
