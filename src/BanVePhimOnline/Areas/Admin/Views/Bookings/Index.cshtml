@model IEnumerable<BanVePhimOnline.Models.Booking>

@{
    ViewData["Title"] = "Quản Lý Đặt Vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản Lý Đặt Vé</h1>

<table class="table">
    <thead>
        <tr>
            <th>Mã Đặt Vé</th>
            <th>Khách Hàng</th>
            <th>Phim</th>
            <th>Rạp / Phòng</th>
            <th>Suất Chiếu</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
            <td>@Html.DisplayFor(modelItem => item.Showtime.Movie.Title)</td>
            <td>
                @item.Showtime.CinemaHall.Cinema.Name - @item.Showtime.CinemaHall.Name
            </td>
            <td>@item.Showtime.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@item.BookingDate.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@item.TotalAmount.ToString("N0") đ</td>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Chi Tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
