@model BanVePhimOnline.Models.Booking

@{
    ViewData["Title"] = "Xóa Đặt Vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa Đặt Vé</h1>

<h3>Bạn có chắc chắn muốn xóa đơn đặt vé này không?</h3>
<div>
    <h4>Booking #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Khách Hàng
        </dt>
        <dd class = "col-sm-10">
            @Model.User.UserName
        </dd>
        <dt class = "col-sm-2">
            Phim
        </dt>
        <dd class = "col-sm-10">
            @Model.Showtime.Movie.Title
        </dd>
        <dt class = "col-sm-2">
            Tổng Tiền
        </dt>
        <dd class = "col-sm-10">
            @Model.TotalAmount.ToString("N0") đ
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay Lại</a>
    </form>
</div>
