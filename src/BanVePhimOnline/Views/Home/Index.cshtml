@model IEnumerable<BanVePhimOnline.Models.Movie>

@{
    ViewData["Title"] = "Trang Chủ";
    var featuredMovies = Model.Take(3).ToList(); // Lấy 3 phim đầu tiên làm nổi bật
}

<!-- Hero Carousel -->
<div id="movieCarousel" class="carousel slide mb-5 shadow-lg" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < featuredMovies.Count; i++)
        {
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
        }
    </div>
    <div class="carousel-inner rounded-3 overflow-hidden">
        @for (int i = 0; i < featuredMovies.Count; i++)
        {
            var movie = featuredMovies[i];
            <div class="carousel-item @(i == 0 ? "active" : "")" style="height: 500px;">
                <!-- Sử dụng ảnh poster làm nền, làm mờ để tạo hiệu ứng -->
                <div style="background-image: url('@movie.PosterUrl'); background-size: cover; background-position: center; filter: blur(8px); -webkit-filter: blur(8px); height: 100%; width: 100%; position: absolute;"></div>
                <div style="background: rgba(0,0,0,0.6); height: 100%; width: 100%; position: absolute;"></div>
                
                <div class="carousel-caption d-none d-md-block text-start" style="bottom: 20%; left: 10%; right: 10%;">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <img src="@movie.PosterUrl" class="img-fluid rounded shadow-lg border border-white" alt="@movie.Title" style="max-height: 300px;">
                        </div>
                        <div class="col-md-9">
                            <h1 class="display-4 fw-bold text-white text-shadow">@movie.Title</h1>
                            <p class="lead text-light">@movie.Genre | @movie.DurationMinutes phút</p>
                            <p class="text-white-50">@movie.Description</p>
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-danger btn-lg mt-3 shadow-sm">
                                <i class="bi bi-ticket-perforated-fill"></i> Đặt Vé Ngay
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Movie List -->
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold border-start border-4 border-danger ps-3">Phim Đang Chiếu</h2>
        <div class="input-group w-25">
            <input type="text" class="form-control" placeholder="Tìm kiếm phim...">
            <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i></button>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm movie-card">
                    <div class="position-relative overflow-hidden rounded-top">
                        <img src="@item.PosterUrl" class="card-img-top" alt="@item.Title" style="height: 400px; object-fit: cover;">
                        <div class="movie-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-75 opacity-0 transition-opacity">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger rounded-pill px-4 py-2 fw-bold shadow">
                                Đặt Vé
                            </a>
                        </div>
                        <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2 shadow-sm">@item.AgeRating</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-truncate" title="@item.Title">@item.Title</h5>
                        <div class="d-flex justify-content-between align-items-center text-muted small mb-2">
                            <span><i class="bi bi-film"></i> @item.Genre</span>
                            <span><i class="bi bi-clock"></i> @item.DurationMinutes'</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pt-0">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-danger w-100 fw-bold">
                            Xem Chi Tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    }
    .movie-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
    }
    .movie-card:hover .movie-overlay {
        opacity: 1 !important;
    }
    .transition-opacity {
        transition: opacity 0.3s ease;
    }
</style>
