@model BanVePhimOnline.Models.Booking

@{
    ViewData["Title"] = "Đặt Vé Thành Công";
}

<div class="container mt-5 text-center">
    <div class="alert alert-success d-inline-block p-5 shadow-lg" role="alert">
        <h1 class="alert-heading display-4"><i class="bi bi-check-circle-fill"></i> Đặt Vé Thành Công!</h1>
        <p class="lead mt-3">Cảm ơn bạn đã sử dụng dịch vụ. Vé của bạn đã được xác nhận.</p>
        <hr>
        <div class="mb-4">
            <h5>Mã Đặt Vé: <span class="badge bg-dark text-warning p-2 fs-5">@Model.Id</span></h5>
            <p class="mb-0 text-muted">Vui lòng xuất trình mã này tại quầy vé để nhận vé.</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Về Trang Chủ</a>
    </div>
</div>
